<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6595959"
    android:backgroundTint="#090707"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/giftambor"
        android:layout_width="273dp"
        android:layout_height="203dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/tumblr_mfau84ynir1qdch9co1_500"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/giftsmoke"
        android:layout_width="273dp"
        android:layout_height="203dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/smoke"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/giftboom"
        android:layout_width="273dp"
        android:layout_height="203dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/explosion"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="204dp"
        android:layout_height="107dp"
        android:background="@drawable/bullet"
        android:backgroundTint="#E6000000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884"
        app:srcCompat="@drawable/bullet"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/butbullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="#AAA7A7"
        android:backgroundTint="#AAA7A7"
        android:foregroundTint="#AAA7A7"
        android:shadowColor="#AAA7A7"
        android:text="@string/butadd"
        android:textColor="#4E342E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftambor" />

    <Button
        android:id="@+id/butready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="#AAA7A7"
        android:backgroundTint="#AAA7A7"
        android:foregroundTint="#AAA7A7"
        android:shadowColor="#AAA7A7"
        android:text="@string/butready"
        android:textColor="#4E342E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toEndOf="@+id/butbullet"
        app:layout_constraintTop_toBottomOf="@+id/giftambor" />

    <ImageView
        android:id="@+id/imgbullet1"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/giftambor"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bullet" />

    <ImageView
        android:id="@+id/imgbullet2"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/giftambor"
        app:layout_constraintStart_toEndOf="@+id/imgbullet1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563"
        app:srcCompat="@drawable/bullet" />

    <ImageView
        android:id="@+id/imgbullet3"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/giftambor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgbullet2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563"
        app:srcCompat="@drawable/bullet" />

    <ImageButton
        android:id="@+id/butpistol"
        android:layout_width="159dp"
        android:layout_height="104dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/pistol"
        android:clickable="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pistol" />

</androidx.constraintlayout.widget.ConstraintLayout>